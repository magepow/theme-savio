    require([
        'jquery',
        'magiccart/slick',
        'alothemes',
        ], function($){
            (function($) {
                var relatedProducts  = $('.post-view .product-items');
                if(relatedProducts.length) $('head').append(magicproduct(relatedProducts, '.item'));
            })(jQuery); 
    });
</script>

