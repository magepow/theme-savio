<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="catalog_product_view" />
	<body>
        <referenceContainer name="product.secondary.column" remove="true"/>
        <referenceContainer name="product.primary.column" htmlClass="product-primary-column col-xs-12"/>
        <referenceContainer name="product.info.media">
            <referenceBlock name="product.info.media.image" template="product/view/quickview_gallery.phtml"/>
        </referenceContainer>
	</body>
</page>
