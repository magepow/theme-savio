<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="styles"/>
    <update handle="editor"/>
    <head>
        <title>Catalog Tabs</title>
        <css src="jquery/fileUploader/css/jquery.fileupload-ui.css"/>
    </head>
    <body>
        <referenceBlock name="menu">
            <action method="setActive">
                <argument name="itemId" xsi:type="string">Magiccart_Magicproduct::magicproduct</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="page.main.actions">
            <block class="Magento\Backend\Block\Store\Switcher" name="store_switcher">
                <action method="setUseConfirm">
                    <argument name="params" xsi:type="string">1</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
        <block class="Magiccart\Magicproduct\Block\Adminhtml\Catalog\Edit" name="catalog_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
        <block class="Magiccart\Magicproduct\Block\Adminhtml\Catalog\Edit\Tabs" name="catalog_edit_tabs">
            <block class="Magiccart\Magicproduct\Block\Adminhtml\Catalog\Edit\Tab\Form" name="catalog_edit_tab_form"/>
            <action method="addTab">
                <argument name="name" xsi:type="string">main_section</argument>
                <argument name="block" xsi:type="string">catalog_edit_tab_form</argument>
            </action>
            <block class="Magiccart\Magicproduct\Block\Adminhtml\Catalog\Edit\Tab\Category" name="catalog_edit_tab_category"/>
        	<action method="addTab">
                <argument name="name" xsi:type="string">category_section</argument>
                <argument name="block" xsi:type="string">catalog_edit_tab_category</argument>
            </action>

            <block class="Magiccart\Magicproduct\Block\Adminhtml\Widget\Edit\Tab\Images" name="catalog_edit_tab_images"/>
            <action method="addTab">
                <argument name="name" xsi:type="string">media_gallery</argument>
                <argument name="block" xsi:type="string">catalog_edit_tab_images</argument>
            </action>

            <block class="Magiccart\Magicproduct\Block\Adminhtml\Widget\Edit\Tab\Responsive" name="catalog_edit_tab_responsive"/>
            <action method="addTab">
                <argument name="name" xsi:type="string">responsive_section</argument>
                <argument name="block" xsi:type="string">catalog_edit_tab_responsive</argument>
            </action>
            <block class="Magiccart\Magicproduct\Block\Adminhtml\Widget\Edit\Tab\Config" name="catalog_edit_tab_config"/>
            <action method="addTab">
                <argument name="name" xsi:type="string">config_section</argument>
                <argument name="block" xsi:type="string">catalog_edit_tab_config</argument>
            </action>
        </block>
        </referenceContainer>
    </body>
</page>
