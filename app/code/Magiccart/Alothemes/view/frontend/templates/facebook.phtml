$fbfanbox = $this->_sysCfg->facebook;
$box_content="";

if(is_numeric($fbfanbox['fb_page_url'])){
    $box_content .='<iframe src="https://www.facebook.com/connect/connect.php?id='.$fbfanbox['fb_page_url'];
}else {
    $box_content .='<iframe src="https://www.facebook.com/plugins/likebox.php?href='. urlencode($fbfanbox['fb_page_url']);
}
$confg = array('width', 'height', 'connections', 'header', 'streams');
foreach ($confg as $cfg) {
    $box_content .= isset($fbfanbox[$cfg]) ? '&amp;'.$cfg.'='. $fbfanbox[$cfg] : '';
}
$confg2 = array('show_border', 'show_faces',);
$box_content .= '&amp;show_border=false';
$box_content .= '&amp;header=false';
//$box_content .= '&show_faces=false';
$box_content .= '" scrolling="no" frameBorder="0" allowTransparency="true" style="border:none; overflow:hidden; ';

$box_content .= isset($fbfanbox['width']) ? ' width:'. $fbfanbox['width'] . 'px; ' : '';
$box_content .= isset($fbfanbox['height']) ? ' height:'. $fbfanbox['height'] . 'px; ' : '';
$box_content .= '"></iframe>';

echo("<div id='fbfanbox'>");
echo($box_content);
echo("</div>");
