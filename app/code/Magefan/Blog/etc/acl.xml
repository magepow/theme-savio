<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="Magefan_Blog::elements" title="Blog" sortOrder="10">
                        <resource id="Magefan_Blog::post" title="Posts" sortOrder="10">
                            <resource id="Magefan_Blog::post_save" title="Save" sortOrder="10" />
                            <resource id="Magefan_Blog::post_delete" title="Delete" sortOrder="20" />
                        </resource>
                        <resource id="Magefan_Blog::category" title="Categories" sortOrder="20">
                            <resource id="Magefan_Blog::category_save" title="Save" sortOrder="10" />
                            <resource id="Magefan_Blog::category_delete" title="Delete" sortOrder="20" />
                        </resource>
                        <resource id="Magefan_Blog::tag" title="Tags" sortOrder="25">
                            <resource id="Magefan_Blog::tag_save" title="Save" sortOrder="10" />
                            <resource id="Magefan_Blog::tag_delete" title="Delete" sortOrder="20" />
                        </resource>
                        <resource id="Magefan_Blog::comment" title="Comments" sortOrder="30">
                            <resource id="Magefan_Blog::comment_save" title="Save" sortOrder="10" />
                            <resource id="Magefan_Blog::comment_delete" title="Delete" sortOrder="20" />
                        </resource>
                        <resource id="Magefan_Blog::import" title="Import" sortOrder="40" />
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Magefan_Blog::config_blog" title="Blog Section" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
